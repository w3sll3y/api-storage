generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String
  cards     Cards[]
  purchases Purchases[]
}

model Cards {
  id        Int    @id @default(autoincrement())
  createdBy String
  number    String
  name      String
  dueDate   String
  code      String
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}

model Item {
  id          Int         @id @default(autoincrement())
  title       String
  price       Int
  seller      String
  thumbnailHd String
  purchases   Purchases[]
}

model Purchases {
  id     Int    @id @default(autoincrement())
  items  Item[]
  total  Int
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
